{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .btn-red {
            background-color: #C70039;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            cursor: pointer;
        }
        
    </style>
{% endblock %}
{% block body %}
<form method="post" action="{{ path('app_number_compte_delete', {'id': compte_budget.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ compte_budget.id) }}">
    <button class="btn-red">Suprimer</button>
</form>
{% endblock %}