
{# transaction/_form.html.twig #}
{{ form_start(form) }}
    {% for field in form %}
        <div class="form-group">
            {{ form_label(field) }}
            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(field) }}
        </div>
    {% endfor %}
    <div class="btn-container">
        <a href="{{ path('app_transaction_index') }}" class="btn-back">Back to list</a>
        <button type="submit" class="btn-save">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}